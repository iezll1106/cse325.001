@inject GameState State
@inject IJSRuntime JS


<HeadContent>
    <style>
        :root {
            --board-bg: yellow;
            --player1: red;   /* default color */
            --player2: blue;  /* default color */
        }
    </style>
</HeadContent>

<article>
    @winnerMessage 
    <button style="@ResetStyle" @onclick="ResetGame">Reset the game</button>
    <br />
    <span class="alert-danger">@errorMessage</span>
    <span class="alert-info">@CurrentTurn</span>
</article>

<h3>Select Player Colors</h3>

<div class="color-selectors">
    <label>Player 1 Color:</label>
    <select @onchange="ChangeP1Color">
        <option value="red">Red</option>
        <option value="green">Green</option>
        <option value="orange">Orange</option>
        <option value="purple">Purple</option>
        <option value="pink">Pink</option>
    </select>

    <label style="margin-left: 2em;">Player 2 Color:</label>
    <select @onchange="ChangeP2Color">
        <option value="blue">Blue</option>
        <option value="yellow">Yellow</option>
        <option value="black">Black</option>
        <option value="cyan">Cyan</option>
        <option value="magenta">Magenta</option>
    </select>
</div>

<hr />

<div class="game-container">

    <!-- LEFT SIDE â†’ BOARD + BUTTONS -->
    <div class="board-section">

        <div class="drop-row">
            @for (byte i = 0; i < 7; i++)
            {
                var col = i;
                <button class="drop-button" @onclick="() => PlayPiece(col)">ðŸ”½</button>
            }
        </div>

        <div class="board">
            @for (var i = 0; i < 42; i++)
            {
                <span class="container"><span></span></span>
            }

            @for (var i = 0; i < 42; i++)
            {
                <span class="@pieces[i]"></span>
            }
        </div>

    </div>

    <!-- RIGHT SIDE â†’ MOVE HISTORY -->
    <div class="history-panel">
        <h3>Move History</h3>
        <ul>
            @foreach (var move in State.MoveHistory)
            {
                <li>@move</li>
            }
        </ul>
    </div>

</div>

@code {
    private string[] pieces = new string[42];
    private string winnerMessage = string.Empty;
    private string errorMessage = string.Empty;

    private string CurrentTurn =>
        winnerMessage == "" ? $"Player {State.PlayerTurn}'s Turn" : "";

    private string ResetStyle =>
        winnerMessage == "" ? "display:none;" : "";

    protected override void OnInitialized()
    {
        State.ResetBoard();
    }

    private void PlayPiece(byte col)
    {
        errorMessage = string.Empty;

        try
        {
            var player = State.PlayerTurn;
            var turn = State.CurrentTurn;

            byte landingRow = State.PlayPiece(col);

            pieces[turn] = $"player{player} col{col} drop{landingRow} row{landingRow}";
        }
        catch (ArgumentException ex)
        {
            errorMessage = ex.Message;
        }

        winnerMessage = State.CheckForWin() switch
        {
            GameState.WinState.Player1_Wins => "Player 1 Wins!",
            GameState.WinState.Player2_Wins => "Player 2 Wins!",
            GameState.WinState.Tie => "It's a tie!",
            _ => ""
        };
    }

    private void ChangeP1Color(ChangeEventArgs e)
    {
        var color = e.Value?.ToString();
        if (!string.IsNullOrEmpty(color))
        {
            JS.InvokeVoidAsync(
                "document.documentElement.style.setProperty",
                "--player1",
                color
            );
        }
    }

    private void ChangeP2Color(ChangeEventArgs e)
    {
        var color = e.Value?.ToString();
        if (!string.IsNullOrEmpty(color))
        {
            JS.InvokeVoidAsync(
                "document.documentElement.style.setProperty",
                "--player2",
                color
            );
        }
    }

    void ResetGame()
    {
        State.ResetBoard();
        pieces = new string[42];
        winnerMessage = "";
        errorMessage = "";
    }
}
